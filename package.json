                "projectTranslator.segmentationMarkers": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "default": {
                        "markdown": [
                            "^#\\s",
                            "^##\\s",
                            "^###\\s"
                        ],
                        "html": [
                            "^<h1[^>]*>",
                            "^<h2[^>]*>",
                            "^<h3[^>]*>"
                        ],
                        "javascript": [
                            "^function\\s+\\w+\\(",
                            "^class\\s+\\w+"
                        ],
                        "typescript": [
                            "^function\\s+\\w+\\(",
                            "^class\\s+\\w+",
                            "^interface\\s+\\w+"
                        ],
                        "python": [
                            "^def\\s+\\w+\\(",
                            "^class\\s+\\w+"
                        ],
                        "java": [
                            "^public\\s+(class|interface|enum)\\s+\\w+",
                            "^\\s*public\\s+\\w+\\s+\\w+\\("
                        ],
                        "go": [
                            "^func\\s+\\w+\\(",
                            "^type\\s+\\w+\\s+struct"
                        ],
                        "c#": [
                            "^public\\s+(class|interface|enum)\\s+\\w+",
                            "^\\s*public\\s+\\w+\\s+\\w+\\("
                        ],
                        "php": [
                            "^function\\s+\\w+\\(",
                            "^class\\s+\\w+"
                        ],
                        "ruby": [
                            "^def\\s+\\w+",
                            "^class\\s+\\w+"
                        ],
                        "rust": [
                            "^fn\\s+\\w+",
                            "^struct\\s+\\w+",
                            "^enum\\s+\\w+"
                        ],
                        "swift": [
                            "^func\\s+\\w+",
                            "^class\\s+\\w+",
                            "^struct\\s+\\w+"
                        ],
                        "kotlin": [
                            "^fun\\s+\\w+",
                            "^class\\s+\\w+"
                        ],
                        "plaintext": [
                            "^\\s*$"
                        ]
                    },
                    "description": "%config.segmentationMarkers.description%",
                    "order": 12
                },
                "projectTranslator.enableMetrics": {
                    "type": "boolean",
                    "default": true,
                    "description": "%config.enableMetrics.description%",
                    "order": 13
                },
                "projectTranslator.diffApply": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean",
                            "default": false,
                            "description": "%config.diffApply.enabled.description%"
                        },
                        "validationLevel": {
                            "type": "string",
                            "enum": [
                                "strict",
                                "normal",
                                "loose"
                            ],
                            "default": "normal",
                            "description": "%config.diffApply.validationLevel.description%"
                        },
                        "autoBackup": {
                            "type": "boolean",
                            "default": true,
                            "description": "%config.diffApply.autoBackup.description%"
                        },
                        "maxOperationsPerFile": {
                            "type": "number",
                            "default": 100,
                            "minimum": 1,
                            "maximum": 1000,
                            "description": "%config.diffApply.maxOperationsPerFile.description%"
                        }
                    },
                    "default": {
                        "enabled": false,
                        "validationLevel": "normal",
                        "autoBackup": true,
                        "maxOperationsPerFile": 100
                    },
                    "description": "%config.diffApply.description%",
                    "order": 14
                }
            }
        }
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Project-Translation/index"
    },
    "scripts": {
        "build": "npm run esbuild-base -- --production",
        "compile": "npm run esbuild-base",
        "compile-tsc": "tsc -p ./",
        "watch-tsc": "tsc -watch -p ./",
        "watch": "npm run esbuild-base -- --watch",
        "esbuild-base": "node esbuild.config.js",
        "lint": "eslint src --ext ts",
        "test": "npm run compile-tsc && node ./out/test/simpleRunner.js",
        "test-compile": "tsc -p ./",
        "pretest": "npm run test-compile",
        "publish:minor": "npm run build && npx @vscode/vsce publish minor --baseContentUrl https://github.com/Project-Translation/project_translator/tree/main --dependencies",
        "publish:patch": "npm run build && npx @vscode/vsce publish patch --baseContentUrl https://github.com/Project-Translation/project_translator/tree/main --dependencies",
        "package": "npm run build && npx @vscode/vsce package --baseContentUrl https://github.com/Project-Translation/project_translator/tree/main --dependencies"
    },
    "devDependencies": {
        "@eslint/js": "^9.23.0",
        "@types/chai": "^5.0.1",
        "@types/mocha": "^10.0.10",
        "@types/node": "^14.18.63",
        "@types/sinon": "^17.0.4",
        "@types/vscode": "^1.74.0",
        "@typescript-eslint/eslint-plugin": "^8.28.0",
        "@typescript-eslint/parser": "^8.28.0",
        "@vscode/vsce": "^3.2.2",
        "chai": "^5.2.0",
        "esbuild": "^0.25.1",
        "eslint": "^9.23.0",
        "mocha": "^11.5.0",
        "sinon": "^20.0.0",
        "ts-loader": "^9.5.2",
        "ts-node": "^10.9.2",
        "typescript": "^4.0.0"
    },
    "dependencies": {
        "axios": "^1.6.0",
        "bindings": "^1.5.0",
        "glob": "^11.0.1",
        "isbinaryfile": "^5.0.0",
        "minimatch": "^10.0.1",
        "openai": "^4.85.3"
    },
    "capabilities": {
        "virtualWorkspaces": true
    },
    "permissions": [
        "machineId"
    ]
}