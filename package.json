                },
                "projectTranslator.copyOnly": {
                    "type": "object",
                    "properties": {
                        "paths": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            },
                            "default": [],
                            "description": "%config.copyOnly.paths.description%"
                        },
                        "extensions": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            },
                            "default": [
                                ".svg"
                            ],
                            "description": "%config.copyOnly.extensions.description%"
                        }
                    },
                    "default": {
                        "paths": [],
                        "extensions": [
                            ".svg"
                        ]
                    },
                    "description": "%config.copyOnly.description%",
                    "order": 8
                },
                "projectTranslator.ignore": {
                    "type": "object",
                    "properties": {
                        "paths": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            },
                            "default": [
                                "**/node_modules/**",
                                "**/.git/**",
                                "**/.github/**",
                                "**/.vscode/**",
                                "**/.translation-cache/**",
                                "project.translation.json"
                            ],
                            "description": "%config.ignore.paths.description%"
                        },
                        "extensions": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            },
                            "default": [],
                            "description": "%config.ignore.extensions.description%"
