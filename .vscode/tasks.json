{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                {
                    "owner": "esbuild",
                    "pattern": [
                        {
                            "regexp": "^✘ \\[ERROR\\] (.*)$",
                            "message": 1
                        },
                        {
                            "regexp": "^    (.*):(\\d+):(\\d+):$",
                            "file": 1,
                            "line": 2,
                            "column": 3
                        }
                    ]
                }
            ],
            "detail": "Bundle extension with esbuild"
        },
        {
            "label": "watch",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "watch"
            ],
            "group": "build",
            "isBackground": true,
            "problemMatcher": [
                {
                    "owner": "esbuild",
                    "pattern": [
                        {
                            "regexp": "^✘ \\[ERROR\\] (.*)$",
                            "message": 1
                        },
                        {
                            "regexp": "^    (.*):(\\d+):(\\d+):$",
                            "file": 1,
                            "line": 2,
                            "column": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "^\\[watch\\] build started$",
                        "endsPattern": "^\\[watch\\] build finished$"
                    }
                }
            ],
            "detail": "Watch and bundle extension with esbuild"
        },
        {
            "label": "build-tsc",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "compile-tsc"
            ],
            "group": "build",
            "problemMatcher": [
                "$tsc"
            ],
            "detail": "Compile TypeScript files (fallback)"
        },
        {
            "label": "watch-tsc",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "watch-tsc"
            ],
            "group": "build",
            "problemMatcher": [
                "$tsc-watch"
            ],
            "detail": "Watch TypeScript files for changes (fallback)"
        },
        {
            "label": "publish patch",
            "type": "shell",
            "command": "npx @vscode/vsce publish patch --baseContentUrl https://github.com/Project-Translation/project_translator/tree/main --dependencies",
            "group": "build",
            "problemMatcher": [],
            "detail": "Publish Patch VS Code extension"
        },
        {
            "label": "publish minor",
            "type": "shell",
            "command": "npx @vscode/vsce publish minor --baseContentUrl https://github.com/Project-Translation/project_translator/tree/main --dependencies",
            "group": "build",
            "problemMatcher": [],
            "detail": "Publish Minor VS Code extension"
        },
        {
            "label": "package vsix",
            "type": "shell",
            "command": "npx @vscode/vsce package --baseContentUrl https://github.com/Project-Translation/project_translator/tree/main --dependencies",
            "group": "build",
            "problemMatcher": [],
            "detail": "Build a VSIX package for local installation"
        },
        {
            "label": "test-compile",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "test-compile"
            ],
            "group": "build",
            "problemMatcher": [
                "$tsc"
            ],
            "detail": "Compile TypeScript files for testing"
        },
        {
            "label": "test",
            "type": "shell",
            "command": "npm",
            "args": [
                "test"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": "test-compile",
            "problemMatcher": [],
            "detail": "Run all tests"
        }
    ]
}