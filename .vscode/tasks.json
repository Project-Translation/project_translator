{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "compile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$tsc"
            ],
            "detail": "Compile TypeScript files"
        },
        {
            "label": "watch",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "watch"
            ],
            "group": "build",
            "problemMatcher": [
                "$tsc-watch"
            ],
            "detail": "Watch TypeScript files for changes"
        },
        {
            "label": "publish patch",
            "type": "shell",
            "command": "npx @vscode/vsce publish patch --baseContentUrl https://github.com/Project-Translation/project_translator/tree/main --dependencies",
            "group": "build",
            "problemMatcher": [],
            "detail": "Publish Patch VS Code extension"
        },
        {
            "label": "publish minor",
            "type": "shell",
            "command": "npx @vscode/vsce publish minor --baseContentUrl https://github.com/Project-Translation/project_translator/tree/main --dependencies",
            "group": "build",
            "problemMatcher": [],
            "detail": "Publish Minor VS Code extension"
        },
        {
            "label": "package vsix",
            "type": "shell",
            "command": "npx @vscode/vsce package --baseContentUrl https://github.com/Project-Translation/project_translator/tree/main --dependencies",
            "group": "build",
            "problemMatcher": [],
            "detail": "Build a VSIX package for local installation"
        }
    ]
}