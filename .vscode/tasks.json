{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                {
                    "owner": "esbuild",
                    "pattern": [
                        {
                            "regexp": "^✘ \\[ERROR\\] (.*)$",
                            "message": 1
                        },
                        {
                            "regexp": "^    (.*):(\\d+):(\\d+):$",
                            "file": 1,
                            "line": 2,
                            "column": 3
                        }
                    ]
                }
            ],
            "detail": "Bundle extension with esbuild"
        },
        {
            "label": "watch",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "watch"
            ],
            "group": "build",
            "isBackground": true,
            "problemMatcher": [
                {
                    "owner": "esbuild",
                    "pattern": [
                        {
                            "regexp": "^✘ \\[ERROR\\] (.*)$",
                            "message": 1
                        },
                        {
                            "regexp": "^    (.*):(\\d+):(\\d+):$",
                            "file": 1,
                            "line": 2,
                            "column": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "^\\[watch\\] build started$",
                        "endsPattern": "^\\[watch\\] build finished$"
                    }
                }
            ],
            "detail": "Watch and bundle extension with esbuild"
        },
        {
            "label": "build-tsc",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "compile-tsc"
            ],
            "group": "build",
            "problemMatcher": [
                "$tsc"
            ],
            "detail": "Compile TypeScript files (fallback)"
        },
        {
            "label": "watch-tsc",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "watch-tsc"
            ],
            "group": "build",
            "problemMatcher": [
                "$tsc-watch"
            ],
            "detail": "Watch TypeScript files for changes (fallback)"
        },
        {
            "label": "publish patch",
            "type": "shell",
            "command": "npx @vscode/vsce publish patch --baseContentUrl https://github.com/Project-Translation/project_translator/tree/main --dependencies",
            "group": "build",
            "problemMatcher": [],
            "detail": "Publish Patch VS Code extension"
        },
        {
            "label": "publish minor",
            "type": "shell",
            "command": "npx @vscode/vsce publish minor --baseContentUrl https://github.com/Project-Translation/project_translator/tree/main --dependencies",
            "group": "build",
            "problemMatcher": [],
            "detail": "Publish Minor VS Code extension"
        },
        {
            "label": "package vsix",
            "type": "shell",
            "command": "npx @vscode/vsce package --baseContentUrl https://github.com/Project-Translation/project_translator/tree/main --dependencies",
            "group": "build",
            "dependsOn": [
                "build"
            ],
            "problemMatcher": [],
            "detail": "Build a VSIX package for local installation"
        },
        {
            "label": "test-compile",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "test-compile"
            ],
            "group": "build",
            "problemMatcher": [
                "$tsc"
            ],
            "detail": "Compile TypeScript files for testing"
        },
        {
            "label": "test",
            "type": "shell",
            "command": "npm",
            "args": [
                "test"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": "test-compile",
            "problemMatcher": [],
            "detail": "Run all tests"
        },
        {
            "label": "convert-svg-to-png",
            "type": "shell",
            "command": "rsvg-convert",
            "args": [
                "-w",
                "128",
                "-h",
                "128",
                "${workspaceFolder}/resources/project-translator.svg",
                "-o",
                "${workspaceFolder}/resources/project-translator.png"
            ],
            "group": "build",
            "problemMatcher": [],
            "detail": "Convert SVG icon to PNG format (128x128)"
        },
        {
            "label": "publish open-vsx (local)",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "publish:ovsx"
            ],
            "group": "build",
            "dependsOn": [
                "package vsix"
            ],
            "options": {
                "env": {
                    "OVSX_PAT": "${input:openVsxToken}",
                    "OPEN_VSX_TOKEN": "${input:openVsxToken}"
                }
            },
            "problemMatcher": [],
            "detail": "本地使用 npm 脚本发布到 Open VSX（运行时输入 Token，不写入文件）"
        },
        {
            "label": "go: build",
            "type": "shell",
            "command": "VERSION=$(cat VERSION) && go build -ldflags \"-X main.Version=${VERSION}\" -o translator ./cmd/translator",
            "options": {
                "cwd": "${workspaceFolder}/go-translator"
            },
            "group": "build",
            "problemMatcher": [
                "$go"
            ],
            "detail": "构建 Go CLI（注入版本号）"
        },
        {
            "label": "go: build (dev)",
            "type": "shell",
            "command": "go build -o translator ./cmd/translator",
            "options": {
                "cwd": "${workspaceFolder}/go-translator"
            },
            "group": "build",
            "problemMatcher": [
                "$go"
            ],
            "detail": "开发构建 Go CLI（不注入版本号）"
        },
        {
            "label": "go: test",
            "type": "shell",
            "command": "go test ./... -v",
            "options": {
                "cwd": "${workspaceFolder}/go-translator"
            },
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "problemMatcher": [
                "$go"
            ],
            "detail": "运行 Go 单元测试"
        },
        {
            "label": "go: test (cover)",
            "type": "shell",
            "command": "go test ./... -v -cover",
            "options": {
                "cwd": "${workspaceFolder}/go-translator"
            },
            "group": "test",
            "problemMatcher": [
                "$go"
            ],
            "detail": "运行 Go 单元测试并显示覆盖率"
        },
        {
            "label": "go: test (bench)",
            "type": "shell",
            "command": "go test ./... -bench=. -benchmem",
            "options": {
                "cwd": "${workspaceFolder}/go-translator"
            },
            "group": "test",
            "problemMatcher": [
                "$go"
            ],
            "detail": "运行 Go 基准测试"
        },
        {
            "label": "go: test sample (project)",
            "type": "shell",
            "command": "../go-translator/translator -config project.translation.json -debug translate project",
            "options": {
                "cwd": "${workspaceFolder}/sample"
            },
            "dependsOn": "go: build (dev)",
            "group": "test",
            "problemMatcher": [],
            "detail": "针对 sample 目录运行项目翻译集成测试"
        },
        {
            "label": "go: test sample (folders)",
            "type": "shell",
            "command": "../go-translator/translator -config project.translation.json -debug translate folders",
            "options": {
                "cwd": "${workspaceFolder}/sample"
            },
            "dependsOn": "go: build (dev)",
            "group": "test",
            "problemMatcher": [],
            "detail": "针对 sample 目录运行文件夹翻译集成测试"
        },
        {
            "label": "go: clean",
            "type": "shell",
            "command": "rm -f translator && go clean",
            "options": {
                "cwd": "${workspaceFolder}/go-translator"
            },
            "problemMatcher": [],
            "detail": "清理 Go 构建产物"
        }
    ],
    "inputs": [
        {
            "id": "openVsxToken",
            "type": "promptString",
            "description": "请输入 Open VSX Access Token（仅本次会话使用，不会保存）",
            "password": true
        }
    ]
}
