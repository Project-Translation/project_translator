{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Extension",
            "type": "extensionHost",
            "request": "launch",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}",
                "${workspaceFolder}/sample-dist"
            ],
            "outFiles": [
                "${workspaceFolder}/out/**/*.js"
            ],
            "preLaunchTask": "build",
            "sourceMaps": true,
            "runtimeExecutable": "${execPath}",
            "skipFiles": [
                "**/node_modules/**"
            ]
        }
    ]
}