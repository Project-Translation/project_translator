{
    "projectTranslator.debug": true,
    "projectTranslator.currentVendor": "openrouter",
    "projectTranslator.translationIntervalDays": 29,
    "projectTranslator.customPrompts": [
        "1. 如果markdown文件标记draft, 则不必翻译.",
        "2. './readmes/' in the sentences should replace with './'"
    ],
    "projectTranslator.logFile": {
        "enabled": true,
        "path": ".translation-logs",
        "maxSizeKB": 10240,
        "maxFiles": 5
    },
    "projectTranslator.ignore": {
        "paths": [
            "embeded/zh-cn/**"
        ],
        "extensions": [
            ".log"
        ]
    },
    "projectTranslator.specifiedFolders": [
        {
            "sourceFolder": {
                "path": "embeded",
                "lang": "en-us"
            },
            "targetFolders": [
                {
                    "path": "embeded/zh-cn",
                    "lang": "zh-cn"
                }
            ]
        },
        {
            "sourceFolder": {
                "path": "structure/json",
                "lang": "en-us"
            },
            "targetFolders": [
                {
                    "path": "i18n/zh-cn/structure/json",
                    "lang": "zh-cn"
                }
            ]
        }
    ],
    "projectTranslator.specifiedFiles": [
        {
            "sourceFile": {
                "path": "translate_source.json",
                "lang": "en-us"
            },
            "targetFiles": [
                {
                    "path": "translate_source_zh-cn.json",
                    "lang": "zh-cn"
                }
            ]
        },
        {
            "sourceFile": {
                "path": "long-stream/news1.md",
                "lang": "en-us"
            },
            "targetFiles": [
                {
                    "path": "i18n/zh-cn/long-stream/news1.md",
                    "lang": "zh-cn"
                }
            ]
        },
        {
            "sourceFile": {
                "path": "resource.resx",
                "lang": "en-us"
            },
            "targetFiles": [
                {
                    "path": "i18n/ko-kr/resource.resx",
                    "lang": "ko-kr"
                }
            ]
        },
        {
            "sourceFile": {
                "path": "structure/md/should_skip.md",
                "lang": "en-us"
            },
            "targetFiles": [
                {
                    "path": "i18n/zh-cn/structure/md/should_skip.md",
                    "lang": "zh-cn"
                }
            ]
        }
    ],
    "projectTranslator.diffApply": {
        "enabled": false,
        "validationLevel": "normal",
        "autoBackup": false,
        "maxOperationsPerFile": 100
    },
}